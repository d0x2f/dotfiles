[colors]
green = #619647
yellow = #FE9B00
black = #000000
grey = #2B2B2B
aqua = #A9B7C6
blue = #6897BB
white = #FFFFFF
red = #A02929
purple = #664975

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/MainBar]
monitor=DP-2
width = 100%
height = 25
offset-x = 0
offset-y = 0
background = ${colors.grey}
foreground = ${colors.aqua}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = SystemSanFrancisco:size=9;0
font-1 = SourceSansPro:size=8;0
font-2 = FontAwesome:size=10;0

modules-left = cpu temperature memory eth
modules-center = spotify
modules-right = i3 ticker volume date

tray-position = left
tray-padding = 5

[module/i3]
type = internal/i3
format = <label-state>

pin-workspaces = true

label-focused-font = 5
label-unfocused-font = 4
label-urgent-font = 4
label-visible-font = 4

label-focused = %name%
label-focused-background = ${colors.purple}
label-focused-foreground = ${colors.aqua}
label-focused-padding = 3

label-unfocused = %name%
label-unfocused-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.red}
label-urgent-padding = 2

label-visible = %name%
label-visible-padding = 2

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/virtual/hwmon/hwmon0/temp1_input

; Threshold temperature to display warning label
; Default: 80
warn-temperature = 60

[module/date]
type = internal/date
interval = 1

format = <label>
format-background = ${colors.yellow}
format-foreground = ${colors.grey}
format-padding = 3
label-active-font = 2

label = %date%  %time%
date =  %A, %b. %d
time =  %H:%M:%S

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label> <ramp-coreload>
format-padding = 5

label = 
label-foreground = ${colors.aqua}
label-font = 3

ramp-coreload-0 = ▁
ramp-coreload-0-font = 5
ramp-coreload-0-foreground = ${colors.green}
ramp-coreload-1 = ▂
ramp-coreload-1-font = 5
ramp-coreload-1-foreground = ${colors.green}
ramp-coreload-2 = ▃
ramp-coreload-2-font = 5
ramp-coreload-2-foreground = ${colors.green}
ramp-coreload-3 = ▄
ramp-coreload-3-font = 5
ramp-coreload-3-foreground = ${colors.green}
ramp-coreload-4 = ▅
ramp-coreload-4-font = 5
ramp-coreload-4-foreground = ${colors.blue}
ramp-coreload-5 = ▆
ramp-coreload-5-font = 5
ramp-coreload-5-foreground = ${colors.blue}
ramp-coreload-6 = ▇
ramp-coreload-6-font = 5
ramp-coreload-6-foreground = ${colors.red}
ramp-coreload-7 = █
ramp-coreload-7-font = 5
ramp-coreload-7-foreground = ${colors.red}

[module/memory]
type = internal/memory
interval = 3

format = <label> <bar-used>
format-padding = 5

label = 

bar-used-indicator =
bar-used-width = 10
bar-used-foreground-0 = ${colors.green}
bar-used-foreground-1 = ${colors.green}
bar-used-foreground-2 = ${colors.blue}
bar-used-foreground-3 = ${colors.red}
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444

[module/eth]
type = internal/network
interface = enp11s0
interval = 3.0

format-connected =  <label-connected>
format-padding = 5

label-connected =  %downspeed%  %upspeed% | %{F#619647}%local_ip%%{F-}
label-connected-foreground = ${colors.aqua}
label-disconnected = Ethernet Disconnected
label-disconnected-foreground = ${colors.red}

[module/volume]
type = custom/script

exec = ~/.config/polybar/pavolume.sh

interval = 0.1

format = <label>
format-foreground = ${colors.grey}
format-background = ${colors.green}
format-padding = 3
label-active-font = 2

click-right = exec pavucontrol
click-left = ~/.config/polybar/pavolume.sh --togmute

scroll-up = pactl set-sink-volume @DEFAULT_SINK@ +3%
scroll-down = pactl set-sink-volume @DEFAULT_SINK@ -3%

[module/ticker]
type = custom/script

exec = ~/.config/polybar/ticker.sh

interval = 60

format = <label>
format-foreground = ${colors.grey}
format-background = ${colors.aqua}
format-padding = 3

label = %output%

[module/spotify]
type = custom/script

exec = spotify-now -i "♬ %artist - %title" -e "✖ Spotify Closed" -p "▮▮ Paused"

interval = 1

format = <label>
format-foreground = ${colors.grey}
format-background = ${colors.blue}
format-padding = 3
label-active-font = 2

click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
scroll-up = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
scroll-down = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

